{% extends 'base.html.twig' %}

{% block title %}Concert
{% endblock %}

{% block body %}

	<div class="row">

		<div class="col-2">
			{% if is_granted("ROLE_ADMIN") %}
			<ul class="nav flex-column sidebar">
				<li class="nav-item">
					<a class="nav-link" href="{{path('concert_update', {id : concert.id })}}">Modifier</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{path('concert_delete', {id : concert.id })}}">
						Supprimer
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
							<path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
						</svg>
					</a>
				</li>
			</ul>
			{% endif %}
		</div>
		<div class="col-8">
			<div class="content">
				<div class="row">
						<h1>{{concert.getName()}}</h1>
				</div>
				<div class="info">
					<div class="row">
						<div class="col-4">
							<div class="row">
								<p>{{concert.venue.place.address}} : {{concert.venue.place.name}}</p>
							</div>
							<div class="row">
								<p>Salle : {{concert.venue.name}}</p>
							</div>
						</div>
						<div class="col-3">
						</div>
						<div class="col-3">
							<div class="row">
								<p>Date : {{concert.date|date("m/d/Y")}}</p>
							</div>
							<div class="row">
								<p>Place disponible : {{concert.capacity}}</p>
							</div>
						</div>
					</div>

				</div>

				<p>Les groupes present :</p>
				<div class="grille">
					{% for band in concert.bands %}
						<div class="card">
							<div class="row">
								<div class="col-5">
									{% if band.picture is null %}
										<img class="imageShow" src="/concertProject/public/images/index.jpg">
									{% endif %}
									{% if band.picture is not null %}
										<img class="imageShow" src="{{ band.picture.url }}">
									{% endif %}
								</div>
								<div class="col-7 nom">
									<a href="{{path('band_show', {id : band.id })}}">{{band.name}}</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="col-2">

		</div>

	</div>

	<style>
		.info{
			background-color: #f5f5f5;
			width: auto;
			border-radius: 25px;
		}
		.info div{
			margin: 5px;
		}
	</style>
{% endblock %}

