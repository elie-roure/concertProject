</style>


    <div class="row">

        <div class="col-2">
            <ul class="nav flex-column sidebar">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('band_update', {id : band.id })}}">Modifier</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('band_delete', {id : band.id })}}">
