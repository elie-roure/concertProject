        </div>
        <div class="col-8">
            <div class="content">
                <h1>{{band.getName()}}</h1>
                <p>Les personnes qui compose le groupe sont :</p>
                <div class="grille">
                    {% for artist in band.artists %}
                        <div class="card">
                            <div class="row">
                                <div class="col-4">
                                    <img class="image" src="/concertProject/public/images/index.jpeg">
                                </div>
                                <div class="col-8 nom">
                                    <a href="{{path('artist_show', {id : artist.id })}}">{{artist.name}}</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <p>Les concerts future du groupe groupe sont :</p>
                <div class="grille">
                    {% for concert in futureConcerts %}
                        <div class="card">
                            <div class="row">
                                <div class="col-4">
                                    <img class="image" src="/concertProject/public/images/index.jpeg">
                                </div>
                                <div class="col-8 nom">
                                    <a href="{{path('concert_show', {id : concert.id })}}">{{concert.name}}</a>
                                </div>
                            </div>
                        </div>
