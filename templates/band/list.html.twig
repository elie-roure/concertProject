{% extends 'base.html.twig' %}

{% block title %}Hello BandController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.wrapper {
			display: flex;
			flex-wrap: wrap;
			margin: auto;
		}
		.wrapper > div {
			flex: 1 1 500px;
		}
		.wrapper > div > p {
			margin: auto
		}
	</style>

	<div class="content">
		<h1>Nos groupes :  âœ…</h1>

		<div class="grille">
			{% for band in bands %}
				<div class="card">
					<div class="row">
						<div class="col-4">
							{% if band.picture is null %}
								<img class="image" src="/concertProject/public/images/index.jpeg">
							{% endif %}
							{% if band.picture is not null %}
								<img class="image" src="{{ band.picture.url }}">
							{% endif %}
						</div>
						<div class="col-8 nom">
							<a href="{{path('band_show', {id : band.id })}}">{{band.name}}</a>
							<p>({{band.getStyle()}})</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

