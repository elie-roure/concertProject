{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
    <h1>Nos artistes :  âœ… <a href="{{path('artist_create')}}">Ajouter</a></h1>

    <div class="grille">
        {% for artist in artists %}
            <div class="card">
                <div class="row">
                    <div class="col-4">
                        <img class="image" src="/concertProject/public/images/index.jpeg">
                        {% if artist.picture != null %}
                            <p>Our website is in maintenance mode. Please, come back later.</p>

                            {{  artist.picture.getUrl()}}
                            <img src="{{  artist.picture.getUrl()}}">
                        {% endif %}
                    </div>
                    <div class="col-8 nom">
                        <a href="{{path('artist_show', {id : artist.id })}}">{{artist.name}}</a>
                        <p>({{artist.getSceneName()}})</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
