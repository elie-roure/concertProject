{% extends 'base.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block body %}

<div class="content">
    <h1>Nos artistes :</h1>

    <div class="grille">
        {% for artist in artists %}
            <div class="card">
                <div class="row">
                    <div class="col-5">

                        {% if artist.picture is null %}
                            <img class="image" src="/concertProject/public/images/index.jpg">
                        {% endif %}
                        {% if artist.picture is not null %}
                            <img class="image" src="{{ artist.picture.url }}">
                        {% endif %}
                    </div>
                    <div class="col-7 nom">
                        <a href="{{path('artist_show', {id : artist.id })}}">{{artist.name}}</a>
                        <p>({{artist.getSceneName()}})</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
